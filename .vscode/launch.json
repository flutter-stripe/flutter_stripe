    "version": "0.2.0",
    "configurations": [
        {
            "name": "example",
            "cwd": "example",
            "request": "launch",
            "type": "dart",
        },
        {
            "name": "Stripe.js web tests",
            "request": "launch",
            "type": "dart",
            "program": "packages/stripe_js/test",
            "args": [
                "-p",
                "chrome",
                "-t",
                "browser"
            ], // Additional args to pass
            "codeLens": {
                "for": [
                    "run-test",
                    "run-test-file",
                    "debug-test",
                    "debug-test-file"
                ],
                "path": "packages/stripe_js/test",
                "title": "${debugType} (chrome)"
            },
        },
    ]
}